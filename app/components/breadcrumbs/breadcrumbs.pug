mixin breadcrumbs(data)
	//- модификатор
	+modif('breadcrumbs', data.mod)

	//- префикс
	+prefix('breadcrumbs', data.prefix)

	//- атрибуты
	- attr = data.attr || ''

	nav(class=`breadcrumbs${pr}${mod}`)&attributes(attr)
		ul
			each item in data.list
				li(class=`breadcrumbs${pr}__item`, class= item.class)
					//- Если есть заголовок
					if (item.href)
						a(class=`breadcrumbs${pr}__link`, href= item.href)= item.text
					else
						span(class=`breadcrumbs${pr}__text`)= item.text
